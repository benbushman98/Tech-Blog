<div class="mx-5 p-5">

    {{#each posts as |post|}}
    <card class="m-3 h-25 d-inline-block w-100 border border-4">
        <div class="d-flex bg-secondary text-white justify-content-between py-3 m-1">
            <div class="mx-5">{{title}}</div>
            <div class="mx-5">Created on {{format_date date_created}} by {{username}}</div>
        </div>
        <div class="d-flex m-3">{{content}}</div>
    </card>
    {{/each}}

</div>